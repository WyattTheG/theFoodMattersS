<div class="container">
    {{# each items }}
        <div id="items" class="row ">
            {{# each this }}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                      <img alt="100%200" style='display:block; width:100%;height:50%;' id='base64image'
                         src="data:image/jpeg;base64,{{this.img.data}}"/>
                        <div class="caption">
                          <h3>{{this.name}}</h3>
                          <p class="description">Description: {{ this.description }}</p>
                          <p class="color">Color: {{ this.color }}</p>
                          <p class="location">Location: {{ this.location }}</p>
                          <p class="dimensions">Dimensions: {{ this.dimensions }}</p>
                          <p class="numberOf">Quantity: {{ this.numberOf }}</p>
                          <div class="clearfix">
                              <a href="/item/{{this._id}}" class="btn btn-success pull-right" role="button">View Item</a>
                          </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/each}}
</div>
