<div class="thumbnail">
  <img style='display:block; width:100%;height:50%;' id='base64image'
     src='data:image/jpeg;charset=utf-8;base64, {{item.img.data}}'/>
    <div class="caption">
      <h3>{{this.name}}</h3>
      <p class="description">Description: {{ this.description }}</p>
      <p class="color">Color: {{ this.color }}</p>
      <p class="location">Location: {{ this.location }}</p>
      <p class="dimensions">Dimensions: {{ this.dimensions }}</p>
      <p class="numberOf">Quantity: {{ this.numberOf }}</p>
    </div>
</div>
